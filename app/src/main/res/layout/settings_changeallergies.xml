<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select all the following allergies that apply:"
        android:textColor="@color/textPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Allergy buttons row -->
    <LinearLayout
        android:id="@+id/allergyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDairy"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Dairy"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:checkable="true"
            app:cornerRadius="48dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
	    app:backgroundTint="@color/settings_allergybuttoncheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGluten"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:text="Gluten"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:checkable="true"
            app:cornerRadius="48dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
	    app:backgroundTint="@color/settings_allergybuttoncheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPeanut"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:text="Peanut"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:checkable="true"
            app:cornerRadius="48dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="2dp"
	    app:backgroundTint="@color/settings_allergybuttoncheck" />
    </LinearLayout>

    <!-- Bottom Done button -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_enabled_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
