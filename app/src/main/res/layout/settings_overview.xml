<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top Tabs -->
    <LinearLayout
        android:id="@+id/topTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Account Tab -->
        <LinearLayout
            android:id="@+id/tab_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">
            <TextView
                android:id="@+id/tabAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="#4DA6FF"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Personal Tab -->
        <LinearLayout
            android:id="@+id/tab_personal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">
            <TextView
                android:id="@+id/tabPersonalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textColor="#6B6F75"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- App Tab -->
        <LinearLayout
            android:id="@+id/tab_app"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">
            <TextView
                android:id="@+id/tabAppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App"
                android:textColor="#6B6F75"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider + Pencil Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"/>

        <!-- Pencil Icon -->
        <ImageButton
            android:id="@+id/btnEditFields"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:tint="?attr/colorOnBackground"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Edit"/>
    </RelativeLayout>

    <!-- Content Container -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
