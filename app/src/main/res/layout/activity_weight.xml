<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- HEADER -->
    <TextView
        android:id="@+id/weightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Tracker"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/weightProgressCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/weightTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- CURRENT WEIGHT SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <!-- RING -->
            <FrameLayout
                android:id="@+id/progressRing"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:gravity="center">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/currentWeightProgress"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:indicatorSize="150dp"
                    app:trackThickness="12dp"
                    app:indicatorColor="#6FBF73"
                    app:trackColor="#E6EDE7"
                    app:indicatorDirectionCircular="clockwise"
                    app:showAnimationBehavior="none"
                    app:trackCornerRadius="8dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/currentWeightInsideValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="164.2"
                        android:textColor="#000"
                        android:textSize="32sp"
                        android:letterSpacing="-0.02"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.385"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.377"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/currentWeightPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:includeFontPadding="false"
                        android:text="68% to goal"
                        android:textColor="#6FBF73"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.432"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/currentWeightInsideValue" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </FrameLayout>
            <TextView
                android:id="@+id/goalProgressInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Goal: 150 lb â€¢ 14.2 lb remaining"
                android:textColor="#5F6B63"
                android:textStyle="normal"
                android:alpha="0.9"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/lastUpdatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last updated: --"
                android:textSize="12sp"
                android:textColor="#8E9A94"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/weightProgressCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- GRAPH CARD -->



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/graphCard"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="24dp"
        android:backgroundTint="@android:color/white"
        app:cardElevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weightProgressCard"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- SMOOTH AREA GRAPH -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/weightChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- ADD WEIGHT CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/addWeightCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/graphCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <Button
                android:id="@+id/setGoalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Goal"
                android:backgroundTint="#6FBF73"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/logWeightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Weight"
                android:backgroundTint="#6FBF73"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
            <Button
                android:id="@+id/historyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:backgroundTint="#6FBF73"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/confettiView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>