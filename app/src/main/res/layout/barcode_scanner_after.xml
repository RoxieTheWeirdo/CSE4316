<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/scanAnotherButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="656dp"
        android:layout_marginEnd="54dp"
        android:backgroundTint="@color/purple_500"
        android:text="Scan Another Barcode"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/moreInfo"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="54dp"
        android:backgroundTint="@color/purple_500"
        android:text="more info"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintOverlap" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/oval_button_background"
        android:gravity="center"
        android:text="Product Image"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="290dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="312dp"
        android:background="@drawable/oval_button_background"
        android:gravity="center_horizontal"
        android:text="Item Description"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="274dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="364dp"
        android:gravity="center_horizontal"
        android:text="Calories: 210"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="187dp"
        android:layout_height="61dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="396dp"
        android:gravity="center_horizontal"
        android:text="Fats: 16"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="203dp"
        android:layout_height="76dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="468dp"
        android:gravity="center_horizontal"
        android:text="Carbs: 40"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="432dp"
        android:gravity="center_horizontal"
        android:text="Sodium: 210"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

